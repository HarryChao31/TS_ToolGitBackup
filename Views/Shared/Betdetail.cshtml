@model TS_Tool.Models.Betdetail
@{
    ViewData["Title"] = "BetInfo Tool";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Betdetail</h1>

@using (Html.BeginForm("index", "Home", FormMethod.Post, new { id = "myForm" }))
{
    <label for="webIdInput">WebId:</label>
    <input type="text" id="webIdInput" name="webIdInput">
    <label for="refnoInput">Refno: </label>
    <input type="text" id="refnoInput" name="refnoInput">
    <br>
    <br>
    <input type="submit" value="Search">
}

<table class="table table-bordered" id="resultTable">
    <thead class="table-dark">
    <tr>
        <th>WebId</th>
        <th>Refno</th>
    </tr>
</table>
<table class="table table-bordered" id="resultBetTable">
    <tr>
        <td>@Model.Webid</td>
        <td>@Model.Refno</td>
    </tr>
     
        </table>
